<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
   >
<!-- 项界面 -->
 
<!-- 标题 --> 
        <TextView 
            android:id="@+id/tv_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示更新"
            android:layout_margin="5dp"  
            android:textSize="18sp"        
            />
<!-- 描述信息 -->
         <TextView 
            android:id="@+id/tv_setting_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/tv_setting_title"  
            android:layout_marginLeft="5dp"  
            android:textColor="#aa000000"   
            />
<!--    android:clickable="false"  是否可以点击  false 不可以点击-->
         <CheckBox
             android:id="@+id/cb_setting_update"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/tv_setting_des"
             android:layout_alignParentRight="true"
             android:layout_marginRight="30dp" 
               android:focusable="false"
            android:clickable="false"
             />             
<!-- 线 -->
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#77000000"
            android:layout_below="@id/tv_setting_des"
            android:layout_marginTop="5dp"
          
            />
    </RelativeLayout>

